root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = none
continuation_indent_size = 4

[*.py]
max_line_length = 119

[{*.html,*.xml}]
quote_type = double

[{*.js,*.css,*.scss}]
quote_type = single

[*.json]
indent_size = 2
insert_final_newline = false
quote_type = double
